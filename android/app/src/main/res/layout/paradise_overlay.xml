<?xml version="1.0" encoding="utf-8"?>
<!-- 
    FULL SCREEN OVERLAY - Menutupi seluruh layar seperti notifikasi telepon masuk
    Background putih solid untuk benar-benar menyembunyikan konten berbahaya di belakangnya
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true">
    
    <!-- Main Content Container - Centered vertically -->
    <LinearLayout
        android:id="@+id/cardBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center"
        android:background="@android:color/white">

        <!-- Icon Warning - Lebih besar untuk full screen -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="⚠️"
            android:textSize="120sp"
            android:layout_marginBottom="32dp" />

        <!-- Title - Lebih besar -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KONTEN BERBAHAYA TERDETEKSI"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="#222222"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="4dp" />

        <!-- Badge Level - Lebih besar -->
        <TextView
            android:id="@+id/tvBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="LOW"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="#FFC107"
            android:textSize="24sp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp" />

        <!-- Description - Lebih besar dan jelas -->
        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terdeteksi konten berisiko rendah."
            android:textColor="#444444"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginBottom="48dp"
            android:lineSpacingExtra="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <!-- Buttons Container - Lebih besar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Button Close App - Primary action -->
            <Button
                android:id="@+id/btnClose"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="TUTUP APLIKASI"
                android:textColor="@android:color/white"
                android:background="#F44336"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:elevation="4dp"
                android:layout_marginBottom="12dp" />

            <!-- Button Ignore - Secondary action (only for LOW) -->
            <Button
                android:id="@+id/btnIgnore"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Abaikan"
                android:textColor="#666666"
                android:background="#E0E0E0"
                android:textSize="16sp"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
